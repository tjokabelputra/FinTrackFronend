<resources>
    <attr name="colorExpense" format="color" />
    <attr name="colorIncome" format="color" />

    <style name="Theme.Fintrack" parent="Theme.Material3.DayNight">
        //Background
        <item name="background">@color/white</item>

        //Primary
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryVariant">@color/income_green</item>
        <item name="colorOnPrimary">@color/white</item>

        //Secondary
        <item name="colorSecondary">@color/dollar_green</item>
        
        //Indicator Color
        <item name="colorIncome">@color/income_green</item>
        <item name="colorExpense">@color/red</item>

        //Text
        <item name="colorOnSurface">@color/black</item>

        //List Background
        <item name="colorSurface">@color/light_brown</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    
    <style name="TextContent">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    //Login and Signup
    <style name="TextContent.Main">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextContent.Main.AppName">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.Main.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.Main.Desc">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextContent.Main.Label">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.Main.Input">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextContent.Main.NoAcc">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.Main.ClickHere">
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    //Transactions List
    <style name="TextContent.List">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextContent.List.Date">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextContent.List.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextContent.List.NoList">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextContent.List.Label">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.List.Income">
        <item name="android:textColor">?attr/colorIncome</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.List.Expense">
        <item name="android:textColor">?attr/colorExpense</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.List.Net">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.List.Category">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.List.Name">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.List.Price">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    //Detail Activity
    <style name="TextContent.Detail">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextContent.Detail.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.Detail.Label">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.Detail.Content">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    //Write Activity
    <style name="TextContent.Write">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextContent.Write.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.Write.Label">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.Write.Input">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextContent.Write.Remainder">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    //Summary Page
    <style name="TextContent.Summary">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextContent.Summary.Date">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.Summary.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.Summary.Label">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    //Option Page
    <style name="TextContent.Settings">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextContent.Settings.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.Settings.Name">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.Settings.Desc">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>